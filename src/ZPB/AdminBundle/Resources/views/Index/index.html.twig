{% extends "ZPBAdminBundle:Layouts:master.html.twig" %}

{% block title %}Gestion des articles{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1>Gestion des articles</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <a class="btn btn-primary" href="{{ path("zpb_admin_posts_create") }}">Ecrire</a>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-2"></div>
            <div class="col-md-2"></div>
            <div class="col-md-2"></div>
            <div class="col-md-2"></div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>titre</th>
                        <th>editer</th>
                        <th>supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.title }}</td>
                                <td><a class="btn btn-success btn-sm" href="{{ path("zpb_admin_posts_update", {id: post.id}) }}"><i class="fa fa-edit"></i></a></td>
                                <td><a class="btn btn-danger btn-sm" href="#"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
